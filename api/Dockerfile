FROM node:22.2.0-alpine

ARG DB_HOST
ARG DB_PORT
ARG DB_NAME
ARG DB_USERNAME
ARG DB_PASSWORD
ARG JWT_SECRET
ARG AWS_SES_ACCESS_KEY_ID
ARG AWS_SES_ACCESS_KEY_SECRET
ARG AWS_REGION
ARG AWS_SES_DOMAIN
ARG CONTACT_EMAIL
ARG DATA_EXTRACTION_CLIENT_ID
ARG DATA_EXTRACTION_CLIENT_SECRET
ARG ETL_PROCESS_EMAILS

ENV DB_HOST $DB_HOST
ENV DB_PORT $DB_PORT
ENV DB_NAME $DB_NAME
ENV DB_USERNAME $DB_USERNAME
ENV DB_PASSWORD $DB_PASSWORD
ENV JWT_SECRET $JWT_SECRET
ENV AWS_SES_ACCESS_KEY_ID $AWS_SES_ACCESS_KEY_ID
ENV AWS_SES_ACCESS_KEY_SECRET $AWS_SES_ACCESS_KEY_SECRET
ENV AWS_REGION $AWS_REGION
ENV AWS_SES_DOMAIN $AWS_SES_DOMAIN
ENV CONTACT_EMAIL $CONTACT_EMAIL
ENV DATA_EXTRACTION_CLIENT_ID $DATA_EXTRACTION_CLIENT_ID
ENV DATA_EXTRACTION_CLIENT_SECRET $DATA_EXTRACTION_CLIENT_SECRET
ENV ETL_PROCESS_EMAILS $ETL_PROCESS_EMAILS

WORKDIR /app

COPY package.json pnpm-workspace.yaml pnpm-lock.yaml tsconfig.json .npmrc ./
COPY api ./api
COPY shared ./shared

RUN corepack enable pnpm
RUN COREPACK_ENABLE_DOWNLOAD_PROMPT=0 corepack prepare pnpm@9.9.0 --activate
RUN pnpm install

RUN pnpm api:build

EXPOSE 4000

CMD ["pnpm", "api:prod"]

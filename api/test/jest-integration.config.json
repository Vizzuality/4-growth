{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "roots": ["<rootDir>/test/integration/"],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/src/$1",
    "^@client/(.*)$": "<rootDir>/../client/src/$1",
    "^@shared/(.*)$": "<rootDir>/../shared/$1"
  },
  "testTimeout": 30000,
  "globalSetup": "<rootDir>/test/global-setup.ts"
}

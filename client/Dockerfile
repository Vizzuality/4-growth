FROM node:22.2.0-alpine

ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_GA_TRACKING_ID
ARG NEXTAUTH_SECRET
ARG NEXTAUTH_URL
ARG AUTH_CREDENTIALS

ENV NEXT_PUBLIC_API_URL $NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_GA_TRACKING_ID $NEXT_PUBLIC_GA_TRACKING_ID
ENV NEXTAUTH_SECRET $NEXTAUTH_SECRET
ENV NEXTAUTH_URL $NEXTAUTH_URL
ENV AUTH_CREDENTIALS $AUTH_CREDENTIALS

WORKDIR /app

COPY package.json pnpm-workspace.yaml pnpm-lock.yaml tsconfig.json .npmrc ./
COPY client ./client
COPY shared ./shared

RUN corepack enable
RUN COREPACK_ENABLE_DOWNLOAD_PROMPT=0 corepack prepare pnpm@9.9.0 --activate
RUN pnpm install

RUN pnpm client:build

EXPOSE 3000

CMD ["pnpm", "client:prod"]
